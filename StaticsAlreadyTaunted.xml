<GuiXml>
  <Controls>

    <TopLevelControl name="SAT_Panel" mouseEnabled="true" movable="false" clampedToScreen="true" hidden="false" resizeToFitDescendents="true">
      <Anchor point="TOPLEFT" relativeTo="GuiRoot" relativePoint="CENTER" offsetX="100" offsetY="0" />
      <OnMoveStop> SAT_ON_MOVE_STOP() </OnMoveStop>
      <OnUpdate> SAT_ON_UPDATE() </OnUpdate>
      <Controls>

        <Backdrop name="$(parent)Backdrop" edgeColor="FF0000" hidden="true">
          <Dimensions x="32" y ="32" />
          <Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" offsetX="0" offsetY="0" />
        </Backdrop>

        <Texture name="$(parent)Icon_Other" color="FF0000" alpha="1" textureFile="/esoui/art/tutorial/gamepad/gp_lfg_tank.dds" hidden="true">
          <Dimensions x="32" y="32" />
					<Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" offsetX="0" offsetY="0" />
				</Texture>

        <Texture name="$(parent)Icon_Player" color="00FF00" alpha="1" textureFile="/esoui/art/tutorial/gamepad/gp_lfg_tank.dds" hidden="true">
          <Dimensions x="32" y="32" />
					<Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" offsetX="0" offsetY="0" />
				</Texture>

        <Texture name="$(parent)Icon_Companion" color="0000FF" alpha="1" textureFile="/esoui/art/tutorial/gamepad/gp_lfg_tank.dds" hidden="true">
          <Dimensions x="32" y="32" />
					<Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" offsetX="0" offsetY="0" />
				</Texture>

        <Texture name="$(parent)Icon_OverTaunted" color="FF0000" alpha="1" textureFile="/esoui/art/tutorial/gamepad/gp_lfg_tank.dds" hidden="true">
          <Dimensions x="32" y="32" />
					<Anchor point="CENTER" relativeTo="$(parent)" relativePoint="CENTER" offsetX="0" offsetY="0" />
				</Texture>

      </Controls>
    </TopLevelControl>

    <TopLevelControl name="SAT_PanelLabels" mouseEnabled="true" movable="false" clampedToScreen="true" hidden="false">
      <Anchor point="TOPLEFT" relativeTo="SAT_Panel" relativePoint="TOPLEFT" offsetX="0" offsetY="0" />
      <Anchor point="BOTTOMRIGHT" relativeTo="SAT_Panel" relativePoint="BOTTOMRIGHT" offsetX="0" offsetY="0" />
      <OnMoveStop> SAT_ON_MOVE_STOP() </OnMoveStop>
      <Controls>

        <Label name="$(parent)StackCount" color="FFFFFF" horizontalAlignment="RIGHT" verticalAlignment="BOTTOM" font="ZoFontGameBold" hidden="true">
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="LEFT" offsetX="0" offsetY="0" />
          <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="0" offsetY="0" />
        </Label>

        <Label name="$(parent)Duration" color="FFFFFF" horizontalAlignment="CENTER" verticalAlignment="TOP" font="ZoFontGameBold" hidden="true">
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="0" />
          <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="0" offsetY="32" />
        </Label>

        </Controls>
    </TopLevelControl>

  </Controls>
</GuiXml>